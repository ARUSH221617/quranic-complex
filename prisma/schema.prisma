generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                  String             @id @default(cuid())
  name                String?
  email               String?            @unique
  emailVerified       DateTime?
  image               String?
  phone               String? // Added phone field
  role                String? // Added role field
  accounts            Account[]
  sessions            Session[]
  nationalCode        String?            @unique // Added for student registration
  dateOfBirth         DateTime? // Added for student registration
  quranicStudyLevel   QuranicStudyLevel? // Added for student registration
  nationalCardPicture String? // Added for student registration (stores file path/URL)
}

enum QuranicStudyLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model News {
  id              String   @id @default(cuid())
  title           String
  slug            String
  content         String
  excerpt         String
  image           String?
  date            DateTime
  locale          String
  metaTitle       String?
  metaDescription String?
  keywords        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([slug, locale], name: "slug_locale")
  @@index([locale])
  @@index([slug])
}

model Event {
  id              String   @id @default(cuid())
  name            String
  slug            String
  description     String?
  date            DateTime
  time            String
  location        String
  image           String?
  locale          String
  metaTitle       String?
  metaDescription String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([slug, locale], name: "event_slug_locale")
  @@index([locale])
  @@index([slug])
}

model Program {
  id              String   @id @default(cuid())
  titleEn         String
  titleAr         String
  descriptionEn   String
  descriptionAr   String
  ageGroupEn      String
  ageGroupAr      String
  scheduleEn      String
  scheduleAr      String
  image           String?
  slug            String
  locale          String
  metaTitle       String?
  metaDescription String?
  keywords        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([slug, locale], name: "program_slug_locale")
  @@index([locale])
  @@index([slug])
}

model Gallery {
  id              String   @id @default(cuid())
  titleEn         String
  titleAr         String
  titleFa         String
  descriptionEn   String?
  descriptionAr   String?
  descriptionFa   String?
  image           String
  category        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([category])
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([createdAt])
}
