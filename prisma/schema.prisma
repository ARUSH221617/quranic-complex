generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum UserRole {
  USER
  STUDENT
  ADMIN
}

// Enum for User Status
enum UserStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id                  String            @id @default(cuid())
  name                String
  email               String            @unique
  emailVerified       DateTime?
  password            String? // Add password field to store hash
  image               String?
  phone               String?
  role                UserRole          @default(USER)
  accounts            Account[]
  sessions            Session[]
  nationalCode        String            @unique
  dateOfBirth         DateTime
  quranicStudyLevel   QuranicStudyLevel
  nationalCardPicture String

  // Fields for email code login
  loginCode        String?
  loginCodeExpires DateTime?
  status           UserStatus @default(PENDING) // Add status field
}

enum QuranicStudyLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- News ---
model News {
  id        String   @id @default(cuid())
  slug      String   @unique // Assuming slug is language-independent or managed separately
  image     String?
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  translations NewsTranslation[]
}

model NewsTranslation {
  id              String  @id @default(cuid())
  newsId          String
  locale          String // e.g., 'en', 'fa', 'ar'
  title           String
  content         String
  excerpt         String
  metaTitle       String?
  metaDescription String?
  keywords        String?

  news News @relation(fields: [newsId], references: [id], onDelete: Cascade)

  @@unique([newsId, locale])
  @@index([locale])
  @@index([newsId])
}

// --- Event ---
model Event {
  id        String   @id @default(cuid())
  slug      String   @unique // Assuming slug is language-independent
  date      DateTime
  time      String
  location  String // Assuming location is not translated, adjust if needed
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  translations EventTranslation[]
}

model EventTranslation {
  id              String  @id @default(cuid())
  eventId         String
  locale          String
  name            String
  description     String?
  metaTitle       String?
  metaDescription String?

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([eventId, locale])
  @@index([locale])
  @@index([eventId])
}

// --- Program ---
model Program {
  id        String   @id @default(cuid())
  slug      String   @unique // Assuming slug is language-independent
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  translations ProgramTranslation[]
}

model ProgramTranslation {
  id              String  @id @default(cuid())
  programId       String
  locale          String
  title           String
  description     String
  ageGroup        String
  schedule        String
  metaTitle       String?
  metaDescription String?
  keywords        String?

  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@unique([programId, locale])
  @@index([locale])
  @@index([programId])
}

// --- Gallery ---
model Gallery {
  id        String   @id @default(cuid())
  image     String
  category  String // Assuming category is not translated, adjust if needed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  translations GalleryTranslation[]

  @@index([category])
}

model GalleryTranslation {
  id          String  @id @default(cuid())
  galleryId   String
  locale      String
  title       String
  description String?

  gallery Gallery @relation(fields: [galleryId], references: [id], onDelete: Cascade)

  @@unique([galleryId, locale])
  @@index([locale])
  @@index([galleryId])
}

// --- Contact ---
model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([createdAt])
}
