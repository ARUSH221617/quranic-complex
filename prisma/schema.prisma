generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum UserRole {
  USER
  STUDENT
  ADMIN
}

// Enum for User Status
enum UserStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id                  String            @id @default(cuid())
  name                String
  email               String            @unique
  emailVerified       DateTime?
  password            String? // Add password field to store hash
  image               String?
  phone               String?
  role                UserRole          @default(USER)
  accounts            Account[]
  sessions            Session[]
  nationalCode        String            @unique
  dateOfBirth         DateTime
  quranicStudyLevel   QuranicStudyLevel
  nationalCardPicture String

  // Fields for email code login
  loginCode        String?
  loginCodeExpires DateTime?
  status           UserStatus @default(PENDING) // Add status field

  // --- New Relations for Chat Bot ---
  chats       Chat[]
  documents   Document[]
  suggestions Suggestion[] // Relation for suggestions linked to the user (as owner)
}

enum QuranicStudyLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- News ---
model News {
  id        String   @id @default(cuid())
  slug      String   @unique // Assuming slug is language-independent or managed separately
  image     String?
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  translations NewsTranslation[]
}

model NewsTranslation {
  id              String  @id @default(cuid())
  newsId          String
  locale          String // e.g., 'en', 'fa', 'ar'
  title           String
  content         String
  excerpt         String
  metaTitle       String?
  metaDescription String?
  keywords        String?

  news News @relation(fields: [newsId], references: [id], onDelete: Cascade)

  @@unique([newsId, locale])
  @@index([locale])
  @@index([newsId])
}

// --- Event ---
model Event {
  id        String   @id @default(cuid())
  slug      String   @unique // Assuming slug is language-independent
  date      DateTime
  time      String
  location  String // Assuming location is not translated, adjust if needed
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  translations EventTranslation[]
}

model EventTranslation {
  id              String  @id @default(cuid())
  eventId         String
  locale          String
  name            String
  description     String?
  metaTitle       String?
  metaDescription String?

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([eventId, locale])
  @@index([locale])
  @@index([eventId])
}

// --- Program ---
model Program {
  id        String   @id @default(cuid())
  slug      String   @unique // Assuming slug is language-independent
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  translations ProgramTranslation[]
}

model ProgramTranslation {
  id              String  @id @default(cuid())
  programId       String
  locale          String
  title           String
  description     String
  ageGroup        String
  schedule        String
  metaTitle       String?
  metaDescription String?
  keywords        String?

  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@unique([programId, locale])
  @@index([locale])
  @@index([programId])
}

// --- Gallery ---
model Gallery {
  id        String   @id @default(cuid())
  image     String
  category  String // Assuming category is not translated, adjust if needed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  translations GalleryTranslation[]

  @@index([category])
}

model GalleryTranslation {
  id          String  @id @default(cuid())
  galleryId   String
  locale      String
  title       String
  description String?

  gallery Gallery @relation(fields: [galleryId], references: [id], onDelete: Cascade)

  @@unique([galleryId, locale])
  @@index([locale])
  @@index([galleryId])
}

// --- Contact ---
model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([createdAt])
}

// --- Chat Bot Models ---

enum ChatVisibility {
  PUBLIC
  PRIVATE
}

enum DocumentKind {
  TEXT
  CODE
  IMAGE
  SHEET
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
  TOOL
}

model Chat {
  id         String         @id @default(cuid())
  createdAt  DateTime       @default(now())
  title      String
  userId     String // References User.id (cuid String)
  visibility ChatVisibility @default(PRIVATE)

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]
  votes    Vote[]

  @@index([userId])
}

model Message {
  id          String      @id @default(cuid())
  chatId      String
  role        MessageRole // Using the new enum
  parts       Json // Corresponds to Drizzle's 'parts' json
  attachments Json // Corresponds to Drizzle's 'attachments' json
  createdAt   DateTime    @default(now())

  chat  Chat   @relation(fields: [chatId], references: [id], onDelete: Cascade)
  votes Vote[]

  @@index([chatId])
}

model Vote {
  chatId    String
  messageId String
  isUpvoted Boolean

  chat    Chat    @relation(fields: [chatId], references: [id], onDelete: Cascade)
  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@id([chatId, messageId]) // Composite primary key
  @@index([messageId])
}

model Document {
  id        String       @id @default(cuid())
  Did       String       @unique
  createdAt DateTime     @default(now())
  title     String
  content   String?
  kind      DocumentKind @default(TEXT)
  userId    String // References User.id (cuid String) - Document owner

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  suggestions Suggestion[]

  @@index([userId])
}

model Suggestion {
  id                String   @id @default(cuid())
  documentId        String // References Document.id (cuid String)
  documentCreatedAt DateTime // Kept for filtering logic as seen in Drizzle queries
  originalText      String
  suggestedText     String
  description       String?
  isResolved        Boolean  @default(false)
  userId            String // References User.id (cuid String) - Document owner
  createdAt         DateTime @default(now())

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade) // Relation to the User who owns the document

  @@index([documentId, documentCreatedAt]) // Index for filtering
  @@index([userId])
}
